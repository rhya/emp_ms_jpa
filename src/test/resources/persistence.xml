<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Development_Environment">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>empjpa.entity.Department</class>
        <class>empjpa.entity.Employee</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521/orcl" />
            <property name="hibernate.connection.username" value="vip" />
            <property name="hibernate.connection.password" value="vip" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />

            <property name="hibernate.hbm2ddl.auto" value="update" />

        </properties>

    </persistence-unit>
</persistence>
